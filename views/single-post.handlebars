{{!-- partial to minimize the repeated code across templates --}}

<div class="card">
    <div class="card-divider title">
        <h4 class="title-text">{{post.title}}</h4>
        <p class="timestamp">Posted by {{post.user.username}} on {{format_date post.created_at}}</p>
    </div>
    <div class="card-section content">
        <p class="content-text">{{post.post_text}}</p>
    </div>
</div>

<div class="card">
    <div class="card-divider title">
        <h4 class="title-text">Comments</h4>
    </div>
    <div class="card-section content">
        {{#each post.comments as |comment|}}
        <p class="content-text">{{comment_text}}</p>
        <p>- {{user.username}} on {{format_date created_at}}</p>
        </br>
        {{/each}}
    </div>
</div>